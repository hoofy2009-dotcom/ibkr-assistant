{
  "manifest_version": 3,
  "name": "IBKR Trading Assistant",
  "version": "2.0",
  "description": "Real-time trading strategy assistant for IBKR Portal",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "*://interactivebrokers.com.au/*",
    "*://*.interactivebrokers.com.au/*",
    "*://interactivebrokers.com.sg/*",
    "*://*.interactivebrokers.com.sg/*",
    "*://interactivebrokers.com.hk/*",
    "*://*.interactivebrokers.com.hk/*",
    "*://interactivebrokers.com/*",
    "*://*.interactivebrokers.com/*",
    "*://interactivebrokers.co.uk/*",
    "*://*.interactivebrokers.co.uk/*",
    "*://ibkr.com.cn/*",
    "*://*.ibkr.com.cn/*",
    "*://ibkr.com/*",
    "*://*.ibkr.com/*",
    "https://feeds.finance.yahoo.com/*",
    "https://query1.finance.yahoo.com/*",
    "https://finance.yahoo.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.deepseek.com/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://dashscope.aliyuncs.com/*",
    "https://ark.cn-beijing.volces.com/*",
    "https://api.x.ai/*",
    "https://openrouter.ai/*",
    "https://cdn.cboe.com/*",
    "https://scanner.tradingview.com/*",
    "https://finnhub.io/*",
    "https://newsapi.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://interactivebrokers.com.au/*",
        "*://*.interactivebrokers.com.au/*",
        "*://interactivebrokers.com.sg/*",
        "*://*.interactivebrokers.com.sg/*",
        "*://interactivebrokers.com.hk/*",
        "*://*.interactivebrokers.com.hk/*",
        "*://interactivebrokers.com/*",
        "*://*.interactivebrokers.com/*",
        "*://interactivebrokers.co.uk/*",
        "*://*.interactivebrokers.co.uk/*",
        "*://ibkr.com.cn/*",
        "*://*.ibkr.com.cn/*",
        "*://ibkr.com/*",
        "*://*.ibkr.com/*"
      ],
      "js": ["config.js", "content.js", "advisor-v2.js"],
      "css": ["styles.css", "styles-v2.css"]
    }
  ]
}
